(begin
   (define (cut-tail-slash x)
     (if (eq? (string-ref x (- (string-length x) 1)) #\/)
       (cut-tail-slash
         (substring
           x
           0
           (- (string-length x) 1)))
       x))

   `(html (@ (lang "ja"))
      (head
        ,@(if (null? *contents-head-tag*)
            '("")
            *contents-head-tag*)
        (title ,*site-title*)
        (meta (@ (charset "utf-8")))
        (link (@ (rel "stylesheet")
                  (type "text/css")
                  (href
                  ,(string-append
                  *contents-root-relative-path*
                  "/resources/style.css"))))
        (script
          "
            var state = 0;
            function hamburger_click(){
               var sidemenu = document.getElementById(\"sidemenu\");
               if (state == 0){
                  sidemenu.style.display = \"block\";
                  var hamburger = document.getElementById(\"hamburger\");
                  hamburger.style[\"color\"] = \"#FF9900\";
                  state = 1;
               }else {
                  sidemenu.style.display = \"none\";
                  var hamburger = document.getElementById(\"hamburger\");
                  hamburger.style[\"color\"] = \"#000000\";
                  state = 0;
               }
            }

            function main_click(){
               if (state == 1){
                  var sidemenu = document.getElementById(\"sidemenu\");
                  sidemenu.style.display = \"none\";
                  hamburger.style[\"color\"] = \"#000000\";
                  state = 0;
               }
            }
          ")
        )
        (body
            (div (@ (class "page-wrapper"))
                (div (@ (class "sidemenu-wrapper")
                        (id "sidemenu"))
                   (div (@ (class "sidemenu"))
                      (div (@ (class "sidemenu-box"))
                         (h4 "#Author")
                         (begin
                           (if (null? *site-author-page*)
                              *site-author-name*
                              `(a (@ (href ,,*site-author-page*))
                                 ,*site-author-name*)))
                         (br "")
                         (begin *site-author-explain*))

                      (div (@ (class "sidemenu-box"))
                         (span (@ (class "tag"))
                               (h4 "#Tags")
                               (begin
                                 (if (null?  *site-selected-tags-and-links*)
                                  '()
                                  (cons
                                    'div
                                     (map
                                       (lambda (tag-link)
                                         (let ((tag (car tag-link))
                                               (link (cadr tag-link)))
                                           (list
                                             'div
                                             `(a (@ (href
                                                      ,(string-append
                                                         (cut-tail-slash *contents-root-relative-path* )
                                                         link)))
                                                 (span (@ (class "tagbox"))
                                                       ,tag))
                                              '(br ""))))
                                        *site-selected-tags-and-links*
                                       ))))))

                      (div (@ (class "sidemenu-box"))
                           (h4 "#Recent entries")
                           ,(begin
                              (if (null?  *site-recent-entries*)
                                '()
                               (cons
                                 'div
                                  (map
                                    (lambda (content)
                                      (let* ((tmp-title
                                              (cond
                                                ((assq '*contents-title* content)
                                                 => cadr)
                                                (else "")))
                                             (title
                                               (if (> (string-length tmp-title) 20)
                                                 (string-append (substring tmp-title 0 17) "...")
                                                 tmp-title))
                                             (date
                                               (cond
                                                 ((assq '*contents-date* content)
                                                  => cadr)
                                                 (else "")))
                                             (sub-directory
                                               (cond
                                                 ((assq '*contents-sub-directory* content)
                                                  => cadr)
                                                 (else "")))
                                             (file-name
                                               (cond
                                                 ((assq '*contents-output-filename* content)
                                                  => cadr)
                                                 (else ""))))
                                        (list
                                          'div
                                          '(@ (style "margin-bottom:10px;border-bottom:1px solid #EEEEEE;"))
                                          date
                                          ":"
                                           `(a (@ (href
                                                    ,(string-append
                                                       (cut-tail-slash *contents-root-relative-path*)
                                                       "/contents/"
                                                       (cut-tail-slash sub-directory)
                                                       "/"
                                                       file-name
                                                       )))
                                               ,title))))
                                    *site-recent-entries*)))))))

                (div (@ (class "main-wrapper"))
                   (div (@ (class "head-menu"))
                          (a (@ (class "hamburger-button")
                                (id "hamburger")
                                (onclick "hamburger_click()"))
                             "â‰¡"
                             )
                          (span (@ (class "sub-main-contents-title"))
                                    (a (@ (href ,(string-append
                                                    (cut-tail-slash
                                                      *contents-root-relative-path*)
                                                    "/index.html")))
                                        ,*site-title*)))
                   (div (@ (class "main")
                           (onclick "main_click()"))
                      (div (@ (class "main-contents"))
                          (header (@ (class "main-contents-title"))
                              (begin
                              `(a (@ (href ,(string-append
                                              (cut-tail-slash
                                                *contents-root-relative-path*)
                                              "/index.html")))
                                  ,*site-title*)))
                          (begin
                          `(div (@ (class "inner-contents"))
                              (h1 ,*contents-title*)
                              ,(if (null?  *contents-tags-and-links*)
                                '()
                                (cons
                                  'span
                                  (cons
                                      "Tags:"
                                      (map
                                        (lambda (tag-link)
                                          `(a (@ (href ,(cadr tag-link)))
                                              (span (@ (class "tagbox"))
                                                    ,(car tag-link))))
                                        *contents-tags-and-links*))))
                              (div (@ (class "time-box"))
                                 ,(if (null? *contents-date*)
                                    '()
                                    *contents-date*))
                              (br)
                              (br)
                              ,*contents-body*)))))))))
